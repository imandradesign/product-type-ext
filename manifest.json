{
  "name": "Squarespace Product Type Highlighter",
  "version": "1.0",
    "description": "Highlights and counts products on a Squarespace Products Page to view their type when the extension is clicked.",
    "author": [
      "Imandra McKenzie",
      "Ralph Daub",
      "Deb Margarella"],
    "icons": {
      "16": "img/tag16-b.png",
      "48": "img/tag48-b.png",
      "128": "img/tag128-b.png"
    },
    "permissions": [
      "activeTab",
      "idle"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default-icon": {
        "16": "img/tag16-b.png",
        "48": "img/tag48-b.png",
        "128": "img/tag128-b.png"
      },
      "default-title": "Squarespace Product Highlighter: OFF"
    },
    "manifest_version": 2
  }
